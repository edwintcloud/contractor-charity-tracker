

<fieldset>
    <div class="" style="padding-left: 350px; padding-right: 350px;">
        <legend>Edit Event</legend>
        <!-- Event title -->
        <div>
          <label for="title">Event Title</label><br>
          <input id="event-title"class="form-control" type="text" name="title" value="{{event.title}}"/>
      </div>
      <!-- charity name -->
        <div>
          <label for="charity">Charity Name</label><br>
          <input id="charity"class="form-control" type="text" name="charity" value="{{event.charity}}"/>
      </div>
      <!-- date -->
        <div>
          <label for="date">Event Date</label><br>
          <input id="event-date" class="form-control" type="date" name="date" value="{{event.date}}"/>
      </div>
      <!-- notes -->
        <div>
          <label for="notes">Event Notes</label><br>
          <textarea id="notes-text" class="form-control" name="notes" rows="10" value="{{event.notes}}"/></textarea>
      </div>
      <!-- BUTTONS -->
      <button class="btn btn-primary" type="submit">Save Event</button>
      <button class="btn btn-danger" type="cancel">Cancel</button>
    </div>
  </fieldset>
